<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boyz.code.workouttimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_wt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_wt_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OverviewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".TimerActivity" android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WorkoutActivity" />
        </activity>

        <service android:name=".TimerService" />
    </application>

</manifest>